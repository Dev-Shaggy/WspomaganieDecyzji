<Window x:Class="PogromcaDylematów.EditCriteriaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PogromcaDylematów"
        mc:Ignorable="d"
        Title="Edytuj kryterium" Height="150" Width="300"
        Icon="Resources/icons/iconEdit.png">
    <Grid>
        <Label Content="Wprowadź lub zmień nazwę kryterium" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="InputCriteriaName" Height="23" Margin="10,41,10,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
        <Button Click="AcceptButton" HorizontalAlignment="Left" Margin="10,0,0,10" Height="30" VerticalAlignment="Bottom">
            <WrapPanel>
                <Image Margin="2" Source="Resources/icons/iconAccept.png"/>
                <TextBlock VerticalAlignment="Center">Potwierdź</TextBlock>
            </WrapPanel>
        </Button>
        <Button Click="CancelButton" Margin="0,0,10,10" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <WrapPanel>
                <Image Margin="2" Source="Resources/icons/iconCancel.png"/>
                <TextBlock VerticalAlignment="Center">Anuluj</TextBlock>
            </WrapPanel>
        </Button>

    </Grid>
</Window>
